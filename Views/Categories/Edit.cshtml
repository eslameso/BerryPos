@model Pos.ViewModels.EditCategoryMv
@{
    ViewData["Title"]="Edit Category";
}
<div class="modal-content">
    <div class="modal-header">
        <h2 class="modal-title text-primary" style="display:inline-block">Edit Category</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="display:inline-block">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
 
   <form asp-controller="Categories" asp-action="Edit" data-ajax="true" data-ajax-method="POST" data-ajax-success="EditSuccess" data-ajax-failure="EditFailure">


        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
        <div class="modal-body">
         
         <input type="hidden" asp-for="Id">

        

         <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        

        <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input type="text" asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        </div>
       <div class="modal-footer">

            <input type="submit" class="btn btn-primary" value="Save" />
            <a href="/Categories/Index" class="btn btn-default">Cancel</a>
        </div>

    </form>
</div>   
