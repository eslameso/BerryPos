@model Pos.ViewModels.UserClaimsVm

<form method="POST">
    <div class="card">
       <div class="card-header">
           <h2>Mange Claims </h2>
       </div>
       <div class="card-body">
           <input type="hidden" asp-for="@Model.UserId">
           @for (int i = 0; i < Model.Claims.Count; i++)
           {
             <div class="form-check m-1">
             
             <input type="hidden" asp-for="@Model.Claims[i].ClaimType">    
             <input asp-for="@Model.Claims[i].IsSelected" classs="form-chech-input">
             <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
               @Model.Claims[i].ClaimType
             </label>
         </div>
           }
        
       </div>
       <div class="card-footer">
           <input type="submit" value="Update" class="btn btn-primary" style="width:auto">
           <a asp-action="EditUser" asp-controller="Adminstrator" asp-route-id="@Model.UserId" class="btn btn-danger" style="width:auto">Cancel</a>
       </div>
    </div>
</form>