@model Pos.ViewModels.EditUserMv
@{
    ViewData["Title"]="Edit User";
}
<h1>Edit User</h1>

<form method="POST" enctype="multipart/form-data">

<div class="form-group row">
    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Id" disabled class="form-control">
        
    </div>
</div>

<div class="form-group row">
    <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="UserName" class="form-control">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="MobileNumber" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="MobileNumber" class="form-control">
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="form-group row">
<div class="col-sm-10">
    <button type="submit" class="btn btn-primary"> Update</button>
     <a asp-action="GetAllRoles" asp-controller="Adminstrator" class="btn btn-danger">Cancel</a>
                    
</div>
</div>

<div class="card ">

  <div class="card-header">
      User Roles
  </div>
  <div class="card-body">
      @if (Model.Roles.Any())
      {
           @foreach (var item in Model.Roles)
      {
          <h5 class="card-text">@item</h5>
      }
      }
      else
      {
          <h5 class="card-text"> There Is No Roles </h5>
      }
     
    
   </div>
  <div class="card-footer text-muted">
    
    <a asp-action="" asp-controller="Adminstrator" asp-route-roleid="@Model.Id" class="btn btn-primary">Manage Roles</a>

  </div>
  
</div>
<br>
<div class="card ">

  <div class="card-header">
      User Claims
  </div>
  <div class="card-body">
      @if (Model.Claims.Any())
      {
           @foreach (var item in Model.Claims)
      {
          <h5 class="card-text">@item</h5>
      }
      }
      else
      {
          <h5 class="card-text"> There Is No Claims </h5>
      }
     
    
   </div>
  <div class="card-footer text-muted">
    
    <a asp-action="" asp-controller="Adminstrator" asp-route-roleid="@Model.Id" class="btn btn-primary">Mange Claims</a>

  </div>
  
</div>
</form>
