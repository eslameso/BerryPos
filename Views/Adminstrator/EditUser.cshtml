@model Pos.ViewModels.EditUserMv
@{
    ViewData["Title"]="Edit User";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/select2.min.css" />
<h1>Edit User</h1>

<form method="POST" enctype="multipart/form-data">

<div class="form-group row">
    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Id" disabled class="form-control">
        
    </div>
</div>

<div class="form-group row">
    <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="UserName" class="form-control" id="UserName">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
</div>
<input asp-for="EmployeeName" type="hidden" class="form-control" id="EmployeeName"/>

<div class="form-group row">
    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="MobileNumber" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="MobileNumber" class="form-control">
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Address" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="BirthDate" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="HireDate" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
       <input asp-for="HireDate"  type="date" class="form-control" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="NationalNumber" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="NationalNumber" class="form-control">
        <span asp-validation-for="NationalNumber" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="BranchId" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <select asp-for="BranchId" asp-items='@(new SelectList (@Model.Branches,"Id","Name"))' class="form-control">
                         <option></option>
                     </select>
        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="JobtitleId" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <select asp-for="JobtitleId" asp-items='@(new SelectList (@Model.JobTitles,"Id","Name"))' class="form-control">
                         <option></option>
                     </select>
        <span asp-validation-for="JobtitleId" class="text-danger"></span>
    </div>
</div>



<div asp-validation-summary="All" class="text-danger"></div>

<div class="form-group row">
<div class="col-sm-10">
    <button type="submit" class="btn btn-primary"> Update</button>
     <a asp-action="GetAllUsers" asp-controller="Adminstrator" class="btn btn-danger">Cancel</a>
                    
</div>
</div>

<div class="card ">

  <div class="card-header">
      User Roles
  </div>
  <div class="card-body">
      @if (Model.Roles.Any())
      {
           @foreach (var item in Model.Roles)
      {
          <h5 class="card-text">@item</h5>
      }
      }
      else
      {
          <h5 class="card-text"> There Is No Roles </h5>
      }
     
    
   </div>
  <div class="card-footer text-muted">
    
    <a asp-action="MangeRolesOfUsers" asp-controller="Adminstrator" asp-route-UserId="@Model.Id" class="btn btn-primary">Manage Roles</a>

  </div>
  
</div>
<br>
<div class="card ">

  <div class="card-header">
      User Claims
  </div>
  <div class="card-body">
      @if (Model.Claims.Any())
      {
           @foreach (var item in Model.Claims)
      {
          <h5 class="card-text">@item</h5>
      }
      }
      else
      {
          <h5 class="card-text"> There Is No Claims </h5>
      }
     
    
   </div>
  <div class="card-footer text-muted">
    
    <a asp-action="MangeUserClaims" asp-controller="Adminstrator" asp-route-UserId="@Model.Id" class="btn btn-primary">Mange Claims</a>

  </div>
  
</div>
</form>

@section scripts{
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/select2.min.js"></script>
    <script>

 $("#UserName").focusout(function () {
    var data=$(this).val();
        $('#UserName').val(function (i, value) {
     $('#EmployeeName').val(data);
    return value.replace(/ /g, '');
     });
      });



    </script>


}
