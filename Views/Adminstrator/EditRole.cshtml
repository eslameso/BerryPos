@model Pos.ViewModels.EditRolesMv
@{
    ViewData["tittle"]="Edit Role";
}
<h1>Edit Roles</h1>
<form method="POST" enctype="multipart/form-data">

<div class="form-group row">
    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Id" disabled class="form-control">
        
    </div>
</div>

<div class="form-group row">
    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="form-group row">
<div class="col-sm-10">
    <button type="submit" class="btn btn-primary"> Update</button>
     <a asp-action="GetAllRoles" asp-controller="Adminstrator" class="btn btn-danger">Cancel</a>
                    
</div>
</div>

<div class="card ">
  <div class="card-header">
      Users In This Role
  </div>
  <div class="card-body">
      @if (Model.User.Any())
      {
           @foreach (var item in Model.User)
      {
          <h5 class="card-text">@item</h5>
      }
      }
      else
      {
          <h5 class="card-text"> There Is No Users </h5>
      }
     
    
   </div>
  <div class="card-footer text-muted">
    
    <a asp-action="EditUsersRole" asp-controller="Adminstrator" asp-route-roleid="@Model.Id" class="btn btn-primary">Add Or Remove Users</a>

  </div>
</div>

</form>
